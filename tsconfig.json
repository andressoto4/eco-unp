{
  "compilerOptions": {
    "declaration": true,              // Para generar archivos .d.ts (tipos)
    "outDir": "./dist",               // Carpeta de salida para el código compilado
    "module": "ESNext",               // Soporte para ES Modules
    "target": "ES6",                  // Versión de JavaScript de salida
    "jsx": "react",                   // JSX para React
    "esModuleInterop": true,          // Importaciones de módulos comunes
    "skipLibCheck": true,             // Saltar comprobación de tipos en dependencias
    "moduleResolution": "node",       // Resolución de módulos estilo Node
    "strict": true,                   // Modo estricto de TypeScript
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"],            // Incluir los archivos dentro de `src`
  "exclude": ["node_modules"] // Excluir `node_modules` y `dist`
}
