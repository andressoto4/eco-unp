{
  "compilerOptions": {
    "target": "ES5",                               
    "module": "ESNext",                            
    "lib": ["DOM", "ESNext"],                      
    "declaration": true,                           // Esto habilita la generaci贸n de archivos de declaraci贸n
    "declarationMap": true,                        // Esto habilita la generaci贸n de mapas de declaraci贸n
    "outDir": "dist",                             
    "strict": true,                               
    "jsx": "react",                               
    "moduleResolution": "node",                    
    "esModuleInterop": true,                       
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true,     
    "noEmit": false,                              
    "isolatedModules": true,                       
    "sourceMap": true,                             
    "resolveJsonModule": true
  },
  "include": ["src"],                              
  "exclude": ["node_modules", "dist"]              
}
